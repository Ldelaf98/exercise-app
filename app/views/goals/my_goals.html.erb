<div class="container">
    
    <div class="goals">
        
        <div class="row">
            <legend>My Goals</legend>
            
            <% if @goals.empty? %>
                <%= "You don't have any goals entered yet." %>
            <% else %>
                <table class="table">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Exercise</th>
                        <th>Timeline</th>
                        <th>Progress</th>
                    </tr>
                    <% @goals.each_with_index do |g, i| %>
                        <tr <%= 'id=last_row' if i == (@goals.size - 1) %> >
                            <td><%= g.name %></td>
                            <td><%= g.description %></td>
                            <td><%= g.exercise.name %></td>
                            <td></td>
                            <td></td>
                        </tr>
                    <% end %>    
                </table>
            <% end %>
        </div>
    
        <div class="row">
            <%= form_tag enter_goal_path, :method => :get do %>
              <input class="btn btn-primary" type="submit" name="commit" value="Add Goal">
            <% end %>
        </div>
        
    </div>
 </div>