<script src="/assets/view_exercises.js"></script>
<div class="exercises">
  <legend>View All Exercises</legend>
  
  <span class="hide_when_editing" id="edit-exercises">
    <button  class="btn btn-info btn-sm"><span class="glyphicon glyphicon-pencil"></span></button>
  </span>
  <span class="show_when_editing" id="done-editing" hidden>
    <button class="btn btn-info btn-sm" hidden><span class="glyphicon glyphicon-ok"></span></button>
  </span>
  <% if @exercises.empty? %>
      <%= "No exercises have been created yet." %>
  <% else %>
      <% @exercises.each_with_index do |e, i| %>
        <div <%= 'id=last_row' if i == (@exercises.size - 1) %> >
           <table id= "table">
              <tr>
                <td><%= e.name%></td>
                <% if current_effective_user.can_delete_exercise?(e) %>
                    <td class="show_when_editing" hidden>
                      <button type="button" name="button1" class="delete_button btn btn-info btn-sm" id="<%=e.id%>"value="delete">
                        <span class="glyphicon glyphicon-trash"></span>
                      </button>
                    </td>
                <% end %>
              </tr>
            </table>

       
        <% end %>  
  <% end %>
</div>
<div class="form-group">
  <%= form_tag create_exercise_path, :method => :get do %>
  Don't see the exercise you're looking for? Add one below<br>
  <input class="btn btn-primary" type="submit" name="commit" value="Click here to create an exercise">
</div>
<% end %>