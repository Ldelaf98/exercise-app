<!DOCTYPE html>
<html>

<style src="/assets/progress.scss"></style>

<div class="container" style="display: block; width: 100%;">


  <div class="row">
    
    <div class="col-sm-4" style="display: inline-block; width: 50%; padding: 1em;">
    
          <h1 style="display: hidden; padding-top: 2em; padding-bottom: 2em;">My Exercise Tracker</h1>
          <%= form_tag my_goals_path, :method => :get do%>
          <%= submit_tag 'My Goals' %>
          <% end %>
    
          <%= form_tag my_measurements_path, :method => :get do%>
          <%= submit_tag 'My Measurements'  %>
          <% end %>
    
          <%= form_tag my_workouts_path, :method => :get do %>
          <%= submit_tag 'My Workouts' %>
          <% end %>
    
          <%= form_tag quick_log_path, :method => :get do %>
          <%= submit_tag 'Quick Log' %>
          <% end %>
    
          <%= form_tag my_clients_path, :method => :get do %>
          <%= hidden_field_tag 'My Clients' %>
          <% end %>
  
          <div class="login">
            <% if current_user %>
                Signed in as <strong><%= current_user.name %></strong>!
                <%= link_to "Sign out", signout_path, id: "sign_out" %>
            <% else %>
                <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
            <% end %>
          </div>
            
    </div>
  
  
    <div class="col-sm-8" style="display: inline-block; width: 50%; padding: 1em;">
    <form>
      <fieldset>

        <legend>Dashboard</legend>

<!--
        <label>my progress</label>
        <%= area_chart [ { name: "Weight", data: Measurement.where(user_id: session[:user_id]).group_by_day(:updated_at).sum(:weight)}] %>
        <%= area_chart [ { name: "Body Fat", data: Measurement.where(user_id: session[:user_id]).group_by_day(:updated_at).sum(:body_fat)}] %>
        <%= area_chart [ { name: "Height", data: Measurement.where(user_id: session[:user_id]).group_by_day(:updated_at).sum(:height)}] %>
-->

        <p>my progress</p>
        <div class="content">
            <div class="group">
              <div class="circular-progress60"></div>
              <div class="circular-text">Weight</div>
            </div>
            
            <div class="group">
              <div class="circular-progress85"></div>
              <div class="circular-text">Body Fat</div>
            </div>
            
            <div class="group">
              <div class="circular-progress100"></div>
              <div class="circular-text">Height</div>
            </div>
            
        </div>  

      </fieldset>
    </form>
    </div>
  </div>

</div>
</html>